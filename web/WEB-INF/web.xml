<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <filter>
        <filter-name>Filter</filter-name>
        <filter-class>
            filter.EncodingFilter
        </filter-class>
        <init-param>
            <param-name>Encoding</param-name>
            <param-value>utf-8</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>Filter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <servlet>
        <servlet-name>adminlogin</servlet-name>
        <servlet-class>Servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>adminlogin</servlet-name>
        <url-pattern>/admin/loginservlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>updateinc</servlet-name>
        <servlet-class>Servlet.UpdateInc</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>updateinc</servlet-name>
        <url-pattern>/admin/updateinc</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>message</servlet-name>
        <servlet-class>Servlet.UserMessage</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>message</servlet-name>
        <url-pattern>/message</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>useredit</servlet-name>
        <servlet-class>Servlet.UserEdit</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>useredit</servlet-name>
        <url-pattern>/admin/useredit</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>regedit</servlet-name>
        <servlet-class>Servlet.Regedit</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>regedit</servlet-name>
        <url-pattern>/userregedit</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>message_info</servlet-name>
        <servlet-class>Servlet.Message_Info</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>message_info</servlet-name>
        <url-pattern>/admin/message_info</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>news</servlet-name>
        <servlet-class>Servlet.New_Info</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>news</servlet-name>
        <url-pattern>/admin/new_info</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>createnew</servlet-name>
        <servlet-class>Servlet.CreateNew</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>createnew</servlet-name>
        <url-pattern>/admin/createnew</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>itemsedit</servlet-name>
        <servlet-class>Servlet.ItemEdit</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>itemsedit</servlet-name>
        <url-pattern>/admin/itemsedit</url-pattern>
    </servlet-mapping>
</web-app>